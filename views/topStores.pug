extends layout

block content
  .inner
    h2 Top #{stores.length} Stores
    table.table
      thead
        th photo
        th ranking
        th name
        th reviews
        th average rating
      tbody
        each store, i in stores
          tr
            td: img(with=200 src=`/uploads/${store.photo || 'store.png'}` alt=store.name)
            td #{i+1}
            td: a(href=`/store/${store.slug}`)= store.name
            td= store.reviews.length
            td #{Math.round(store.averageRating * 10) /10} / 5

